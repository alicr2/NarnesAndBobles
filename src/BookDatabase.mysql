CREATE DATABASE top_10_books;
USE top_10_books;

CREATE TABLE books (
    id INT AUTO_INCREMENT PRIMARY KEY,
    title VARCHAR(255) NOT NULL,
    author VARCHAR(255) NOT NULL,
    year_published YEAR,
    genre VARCHAR(100),
    publisher VARCHAR(255),
    copies_sold BIGINT,
    ratings DECIMAL(3, 2) CHECK (ratings BETWEEN 0.00 AND 5.00)
);

